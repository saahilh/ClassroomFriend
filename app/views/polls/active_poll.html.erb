<%= render(partial: '/partials/nav_bar') %>
<h1 class="course-name">Course: <%= @course.name %></h1>

<%= javascript_tag "roomName = \"#{@course.name}\"" %>

<div class="row"><div class="col-md-12"><span>Question</span></div></div>
<div class="separator-sm"></div>

<div id="poll-form" class="form-group" style="overflow-y: auto; overflow-x: hidden; height: 280px; padding-left: 15px">

  <div class="row">
    <div class="col-md-12 big-line">
      <input type="textarea" value="<%=poll.question%>"/>
    </div>
  </div>
  
  <div class="separator-sm"></div>

  <% poll.options.order(:number).each do |option| %>
  <div id="option<%option.number%>" class="row">
    <div class="col-md-1">
      <span>
        Option <%=option.number%>
      </span>
    </div>
    <div class="col-md-11 med-line">
      <input id="opt<%=option.number%>" name="opt<%=option.number%>" type="textarea" class="form-control" value="<%=option.value%>">
    </div>
  </div>
  <div class="separator-sm"></div>
  <% end %>

  <div class="separator-md"></div>
</div>

<div id="response_counter" class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4"><div class="btn btn-inverse fit disabled"><span id="counter">0</span> out of <span id="active-connections"><%= ActionCable.server.connections.length - 1 %></span> students have answered</div></div>
  <div class="col-md-4"></div>
</div>

<div class="separator-sm"></div>

<form action="end_poll" method="post">
  <input class="hidden" name="poll_id" value="<%=poll.id%>"/>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 big-line">
      <button type="submit" class="btn btn-inverse fit">
        <span>End Poll and View Results</span>
      </button>
    </div>
    <div class="col-md-2"></div>
  </div>
</form>
