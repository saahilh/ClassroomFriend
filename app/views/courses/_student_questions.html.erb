<div id="q<%=question.id%>" class="question-item">
	<div class="question-data">
		<span class="text" maxlength="105"><%= question.question %></span>
		<span class="status">Status: <%= question.status %></span>
	</div>
	
	<form data-remote="true" action="/questions/<%=question.id%>/thumbsup" method="post">
		<button type="submit" class="btn fa fa-thumbs-up<%= vote=="up" ? " btn-primary" : " text-primary" %>"></button>
		<span><%= question.upvotes %></span>
	</form>

	<form data-remote="true" action="/questions/<%=question.id%>/thumbsdown" method="post">
		<button type="submit" class="btn fa fa-thumbs-down<%= vote=="down" ? " btn-danger" : " text-danger" %>"></button>
		<span><%= question.downvotes %></span>
	</form>

	<form data-remote="true" action="/questions/<%=question.id%>/flag" method="post">
		<button type="submit" class="btn fa fa-flag btn-warning"></button>
	</form>
</div>