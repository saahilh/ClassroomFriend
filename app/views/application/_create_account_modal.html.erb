<script>
  $(document).on('click', "#submission button", function(){ $("#submission").hide(); $(".confirmation").show(); })

  $(document).on('click', "#create-account-back button", function(){ $("#submission").show(); $(".confirmation").hide(); })

  $(document).on('click', "#create-account-button", function(e){
    e.preventDefault();
    form = $("#create-account-modal form");
    $.ajax({
      type: form.attr("method"),
      url: form.attr("action"),
      data: form.serialize(),
      success: function(response){ 
        if(response.data.success){
          $(".modal-body.confirmation h4").text("Success!");
          $("#modal-message").text(response.data.msg)
          $("#create-account-back").hide();
        }
        else{
          $("#create-account-back").show();
          $(".modal-body.confirmation h4").text("Error");
          $("#modal-message").text(response.data.msg); 
        }
      },
      dataType: "json"
    });
  });
</script>

<div id="create-account-modal" class="modal fade" role="dialog" style="overflow:hidden;">
  <div class="modal-dialog modal-sm">
    <div class="modal-content" style="background-color:#4d4c4c; opacity:0.8;">
      <div id="submission" class="modal-body" style="height: 500px; max-height: 500px !important; padding-top: 80px">
        <form action="/lecturers/create" method="post">
          <div class="form-group">
            <label for="email">Preferred Name</label>
            <input type="textarea" class="form-control" name="name">
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="textarea" class="form-control" name="email">
          </div>
          <div class="form-group">
            <label for="pw">Password</label>
            <input type="password" class="form-control" name="pw">
          </div>
          <div class="form-group">
            <label for="cpw">Confirm Password</label>
            <input type="password" class="form-control" name="cpw">
          </div>
        </form>
        <div class="row">
          <div class="col-md-12 center big-line">
            <button id="create-account-button" type="submit" data-remote="true" class="btn btn-inverse big-btn">
              Continue
            </button>
          </div>
        </div>
      </div>
      <div class="modal-body confirmation" style="height: 300px !important; padding-top: 20px; display:none">
        <h4 class="center">Success!</h4>

        <div class="separator-sm">

        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-10">
            <p id="modal-message" class="white center"></p>
          </div>
          <div class="col-md-1"></div>
        </div>

        <div class="separator-md"></div>

        <div id="create-account-back" class="row">
          <div class="col-md-3"></div>
          <div class="col-md-6">
            <button type="button" class="btn btn-inverse big-btn fit">
              Back
            </button>
          </div>
          <div class="col-md-3"></div>
        </div>

        <div class="separator-md"></div>

        <div class="row">
          <div class="col-md-3"></div>
          <div class="col-md-6">
            <button type="button" class="btn btn-inverse big-btn fit" data-dismiss="modal">
              Okay
            </button>
          </div>
          <div class="col-md-3"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.modal-dialog.modal-sm{
  margin-top: 50px;
  margin-bottom: 90px;
}
</style>